<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.amaker.bean.News" table="NewsTbl" >
		<id name="id" type="java.lang.Integer">
			<column name="ID"/>
			<!-- 指定主键的生成方式。native:数据库本地的方式生成 -->
			<generator class="native"/>
		</id>
		
		<property name="title" type="java.lang.String">
			<column name="TITLE"/>
		</property>
		
		<property name="author" type="java.lang.String">
			<column name="AUTHOR"/>
		</property>
		
		<property name="date" type="java.util.Date">
			<column name="DATE"/>
		</property>
	</class>
</hibernate-mapping>
